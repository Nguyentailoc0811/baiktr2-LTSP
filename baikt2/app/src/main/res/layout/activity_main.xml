<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#15A81B"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Chuyển Đổi Năm Dương Lịch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
           android:paddingLeft="50dp"
            android:layout_weight="0.5"
            android:text="Năm dương lịch:" />

        <EditText
            android:id="@+id/Duonglich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:backgroundTint="#0849EF"
            android:minHeight="48dp"
            android:paddingRight="200dp"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingLeft="30dp"
            android:text="" />

        <Button
            android:id="@+id/Chuyendoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:text="Chuyển đổi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:layout_weight="0.5"
            android:text="Năm âm lịch:" />

        <TextView
            android:id="@+id/Amlich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E6F646"
           android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="2.5"
            android:text="" />
    </LinearLayout>


</LinearLayout>